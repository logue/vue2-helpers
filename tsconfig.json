{
  "$schema": "https://json.schemastore.org/tsconfig.json",
  "extends": [
    "@tsconfig/node-lts/tsconfig.json",
    "@vue/tsconfig/tsconfig.json"
  ],
  "compilerOptions": {
    "declaration": true,
    "declarationMap": true,
    "declarationDir": ".",
    "newLine": "lf",
    "noImplicitAny": false,
    "lib": ["ESNext", "DOM"],
    "paths": { "@/*": ["./src/*"] },
    "types": ["vue", "vuetify"]
  },
  "include": ["src/**/*.ts", "src/**/*.d.ts"],
  "exclude": ["node_modules", "dist", "scripts"],
  "vueCompilerOptions": { "target": 2.7 }
}
